<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Adly- ogłoszenia</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.googleapis.com/css?family=Playfair+Display|Varela|Yanone+Kaffeesatz" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Passion+One" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700,800&amp;subset=latin-ext" rel="stylesheet">

</head>
<body>
    <div class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <h1 class="branding"><img class="brand-logo" src="~/Content/logo.png" /><span class="brand-first">ADLY</span><span class="brand-second">APPLICATION</span></h1>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav pull-right">
                    <li>@Html.ActionLink("Strona główna", "Index", "Home")</li>
                    <li>@Html.ActionLink("Ogłoszenia", "Index", "Advertisement")</li>
                    <li class="dropdown">
                        <a class="dropbtn">Tabele</a>
                        <div class="dropdown-content">
                            @Html.ActionLink("Tabela ogłoszeń", "Table", "Advertisement")
                            @Html.ActionLink("Tabela kategorii", "Table", "Category")
                            @Html.ActionLink("Tabela komentarzy", "Table", "Comment")
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container-fluid body-content">
        @RenderBody()
    </div>

    <footer class="container-fluid footer-container">
        <div class="container">
            <div class="col-md-12 text-center footer">
                <p>&copy; Copyright Jakub Kosior 2017</p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
